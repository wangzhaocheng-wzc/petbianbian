{
  "name": "pet-health-community",
  "version": "1.0.0",
  "description": "宠物健康监测和社区网站",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build --no-cache",
    "health-check": "bash scripts/health-check.sh",
    "backup": "bash scripts/backup.sh",
    "deploy:dev": "bash scripts/deploy.sh development",
    "deploy:prod": "bash scripts/deploy.sh production",
    "test:pet-permissions": "cd frontend && npm run test:pet-permissions",
    "test:pet-permissions:access": "cd frontend && npm run test:pet-permissions:access",
    "test:pet-permissions:sharing": "cd frontend && npm run test:pet-permissions:sharing",
    "test:pet-permissions:privacy": "cd frontend && npm run test:pet-permissions:privacy",
    "test:pet-permissions:security": "cd frontend && npm run test:pet-permissions:security",
    "test:pet-permissions:performance": "cd frontend && npm run test:pet-permissions:performance",
    "cleanup:test-data": "cd frontend && npm run cleanup:test-data",
    "test:analysis": "cd frontend && npm run test:analysis",
    "test:analysis:upload": "cd frontend && npm run test:analysis:upload",
    "test:analysis:process": "cd frontend && npm run test:analysis:process",
    "test:analysis:results": "cd frontend && npm run test:analysis:results",
    "test:analysis:performance": "cd frontend && npm run test:analysis:performance",
    "cleanup:test-images": "cd frontend && npm run cleanup:test-images",
    "test:moderation": "node frontend/e2e/run-moderation-tests.cjs",
    "test:moderation:filtering": "node frontend/e2e/run-moderation-tests.cjs filtering",
    "test:moderation:reporting": "node frontend/e2e/run-moderation-tests.cjs reporting",
    "test:moderation:banning": "node frontend/e2e/run-moderation-tests.cjs banning",
    "test:moderation:admin": "node frontend/e2e/run-moderation-tests.cjs admin",
    "test:moderation:workflow": "node frontend/e2e/run-moderation-tests.cjs workflow",
    "verify:moderation": "node test-moderation.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "pg": "^8.16.3"
  }
}
